<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/top_menu_bar_height"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="@color/main_menu_bg"
    android:clickable="true"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageView
            android:id="@+id/btn_cloud_home"
            android:layout_width="@dimen/top_menu_bar_height"
            android:layout_height="fill_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_camera_top_bar_my_center" />

        <ImageView
            android:id="@+id/img_mode_function_new_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/btn_cloud_home"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="9.0dip"
            android:background="@drawable/have_new_effect_flag"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <View
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" />

    <ImageView
        android:id="@+id/btn_switch_camera"
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_camera_top_bar_sw_camera" />

    <ImageView
        android:id="@+id/btn_flash_mode"
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:contentDescription="@string/app_name"
        android:src="@drawable/btn_flash_on" />

    <ImageView
        android:id="@+id/btn_other_setting"
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_camera_top_bar_setting" />

</LinearLayout>